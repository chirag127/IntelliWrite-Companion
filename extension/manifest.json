{
  "manifest_version": 3,
  "name": "IntelliWrite Companion",
  "version": "1.0.0",
  "description": "AI-powered writing assistant that enhances your writing with paraphrasing, grammar correction, text generation, and more.",
  "author": "Chirag Singhal",
  "icons": {
    "16": "assets/icon16.png",
    "48": "assets/icon48.png",
    "128": "assets/icon128.png"
  },
  "action": {
    "default_popup": "html/popup.html",
    "default_icon": {
      "16": "assets/icon16.png",
      "48": "assets/icon48.png",
      "128": "assets/icon128.png"
    }
  },
  "background": {
    "service_worker": "js/background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["js/content.js"],
      "css": ["css/content.css"]
    }
  ],
  "permissions": [
    "storage",
    "contextMenus",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "http://localhost:3000/*"
  ],
  "web_accessible_resources": [
    {
      "resources": ["html/sidebar.html", "css/sidebar.css", "assets/*"],
      "matches": ["<all_urls>"]
    }
  ],
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+I",
        "mac": "Command+Shift+I"
      },
      "description": "Open IntelliWrite Companion"
    }
  }
}
